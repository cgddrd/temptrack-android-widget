<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33B5E5"
    android:padding="@dimen/widget_margin"
    android:paddingTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="20\u00B0"
            android:textSize="80sp"
            android:id="@+id/textViewTemp"
            android:layout_gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            android:paddingStart="26dp"
            android:gravity="center"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:paddingLeft="26dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/textViewTemp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:background="@drawable/clock_icon" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:id="@+id/textClock" />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/textViewTemp"
        android:paddingLeft="26dp"
        android:paddingTop="26dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:background="@drawable/max_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20\u00B0"
                android:textSize="16sp"
                android:id="@+id/textView2"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/icon2"
                android:gravity="center"/>


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:background="@drawable/min_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20\u00B0"
                android:textSize="16sp"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/icon3"
                android:gravity="center"/>

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="0dp"
                android:background="@drawable/min_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20\u00B0"
                android:textSize="16sp"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/icon3"
                android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>

